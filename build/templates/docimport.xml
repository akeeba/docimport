<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade" version="2.5.0">
	<name>DocImport</name>
	<creationDate>##DATE##</creationDate>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@akeebabackup.com</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2019 Nicholas K. Dionysopoulos</copyright>
	<license>GNU/GPL v3 or later</license>
	<version>##VERSION##</version>
	<description>Akeeba DocImport3 v.##VERSION##</description>

	<!-- Public front end files -->
	<files folder="frontend">
		<folder>Controller</folder>
		<folder>Dispatcher</folder>
		<folder>Helper</folder>
		<folder>Model</folder>
		<folder>View</folder>
		<folder>views</folder>

		<filename>docimport.php</filename>
		<filename>index.html</filename>
		<filename>metadata.xml</filename>
		<filename>router.php</filename>
	</files>

	<languages folder="language/frontend">
		<language tag="en-GB">en-GB/en-GB.com_docimport.ini</language>
	</languages>

	<media destination="com_docimport" folder="media">
		<folder>admonition</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_DOCIMPORT</menu>
		<files folder="backend">
			<folder>assets</folder>
			<folder>Controller</folder>
			<folder>Dispatcher</folder>
			<folder>Model</folder>
			<folder>sql</folder>
			<folder>Toolbar</folder>
			<folder>View</folder>

			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>docimport.php</filename>
			<filename>fof.xml</filename>
			<filename>index.html</filename>
			<filename>version.php</filename>
		</files>

		<languages folder="language/backend">
			<language tag="en-GB">en-GB/en-GB.com_docimport.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_docimport.sys.ini</language>
		</languages>
	</administration>

	<!-- Installation / uninstallation PHP scripts -->
	<scriptfile>script.com_docimport.php</scriptfile>
</extension>