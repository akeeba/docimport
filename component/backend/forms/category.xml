<form addfieldprefix="Akeeba\Component\DocImport\Administrator\Field">
    <fieldset name="basic"
              label="COM_DOCIMPORT_CATEGORY_BASIC_TITLE"
    >

        <field
                name="docimport_category_id"
                type="hidden"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="title"
                type="text"
                label="COM_DOCIMPORT_CATEGORIES_FIELD_TITLE"
                default=""
                required="true"
        />

        <field
                name="slug"
                type="text"
                label="COM_DOCIMPORT_CATEGORIES_FIELD_SLUG"
                default=""
                required="true"
        />

        <field
                name="image"
                type="media"
                label="COM_DOCIMPORT_CATEGORIES_FIELD_IMAGE"
        />

        <field
                name="enabled"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="process_plugins"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_DOCIMPORT_CATEGORIES_FIELD_PROCESS_PLUGINS"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                filter="UINT"
                validate="options"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
        >
            <option value="*">JALL</option>
        </field>

        <field
                name="ordering"
                type="text"
                label="JFIELD_ORDERING_LABEL"
                size="6"
                default="0"
        />

        <field
                name="created_on"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

    </fieldset>
    <fieldset name="details"
              label="COM_DOCIMPORT_CATEGORY_DETAILS_TITLE"
    >
        <field
                name="description"
                type="editor"
                label="COM_DOCIMPORT_CATEGORIES_FIELD_DESCRIPTION"
                filter="JComponentHelper::filterText"
        />

        <field
                name="modified_on"
                type="hidden"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="hidden"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="locked_by"
                type="hidden"
                filter="unset"
        />

        <field
                name="locked_on"
                type="hidden"
                filter="unset"
        />

    </fieldset>
</form>