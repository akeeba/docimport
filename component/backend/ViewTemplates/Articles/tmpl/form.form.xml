<form validate="true">
  <fieldset name="basic" label="COM_DOCIMPORT_ARTICLES_BASIC_TITLE">
    <field name="title"
           type="Text"
           label="COM_DOCIMPORT_ARTICLES_FIELD_TITLE"
    />

    <field name="slug"
           type="Text"
           label="COM_DOCIMPORT_ARTICLES_FIELD_SLUG"
    />

    <field name="docimport_category_id"
           type="Model"
           model="Categories"
           key_field="docimport_category_id"
           value_field="title"
           label="COM_DOCIMPORT_ARTICLES_FIELD_CATEGORY"
           sortable="true"
    />

    <field name="enabled" type="Published" label="JPUBLISHED"/>
  </fieldset>

  <fieldset name="desc"
            label="COM_DOCIMPORT_ARTICLES_FIELD_FULLTEXT"
  >
    <field name="fulltext"
           type="Editor"
           label_placement="none"
           buttons="1"
    />

  </fieldset>
</form>
