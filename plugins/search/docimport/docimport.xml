    <creationDate>2021-03-02</creationDate>
    <copyright>Copyright (C) 2011-2020 Akeeba Ltd. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later</license>
    <authorEmail>nikosdion@gmail.com</authorEmail>
    <authorUrl>www.akeeba.com</authorUrl>
    <version>3.0.0</version>
    <description>PLG_SEARCH_DOCIMPORT_XML_DESCRIPTION</description>
    <files>
        <filename plugin="docimport">docimport.php</filename>
        <filename>index.html</filename>
        <filename>.htaccess</filename>
        <filename>web.config</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_search_docimport.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_search_docimport.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
                <field name="search_limit" type="text"
                       default="50"
                       description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
                       label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
